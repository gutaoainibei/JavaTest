<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="MybatisTest2.StudentMapper">

    <!-- 基础的属性，返回基本的student类型 -->
    <resultMap type="MybatisTest2.model.Student" id="baseResultMap">
	   <id property="id" column="sid"/>
	   <result property="id" column="sname"/>
	</resultMap>
    
    
	<!-- 根据id查询得到一个user对象 -->
	<select id="getStudent" parameterType="int" resultType="MybatisTest2.model.Student">
		select *from user where id = #{id}
	</select>
　　　
</mapper>
